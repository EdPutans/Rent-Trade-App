<h3>Recommended listings:</h3><hr>
<% if @user.relevants.length > 0 %>
<% Listing.all.each do |l| %>
  <% @user.relevants.each do |relevant| %>
    <% if l.postcode[0..2] == relevant.postcode[0..2] or l.postcode == relevant.postcode%>
          <a href="<%= listing_path(l) %>" class="column"><img src="<%= l.picture_url%>" style="max-width:200px;max-height:300px;"> </a>
          <p class="column"><%= l.title %></p>
          <p class="column"><%= l.description %></p>
    <% end %>

  <% end %>
<% end %>
<% else %>
  You don't have any relevant listings yet. Try updating your postcodes of interest.
<% end %>
