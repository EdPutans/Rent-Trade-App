<!DOCTYPE html>
<html>
  <head>
    <title>RentTrader</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
     {
        box-sizing: border-box;
    }
    h4, h3, h2 {
      text-align: center;
    }
    hr {
      width: 90%
    }
    input, select, textarea {
      width: 100%; /* Full width */
      padding: 12px; /* Some padding */
      border: 1px solid #ccc; /* Gray border */
      border-radius: 4px; /* Rounded borders */
      box-sizing: border-box; /* Make sure that padding and width stays in place */
      margin-top: 6px; /* Add a top margin */
      margin-bottom: 16px; /* Bottom margin */
      resize: vertical /* Allow the user to vertically resize the textarea (not horizontally) */
    }


    body {
      background-color: #E8E8E8;
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }
    .field {
      margin-right: 20px;
    }
    /* Style the side navigation */
    .sidenav {
        height: 100%;
        width: 200px;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #111;
        overflow-x: hidden;
    }
    img {
      background: #eee;
      border: 2px solid transparent;
      border-radius: 3px;
    }
    img:hover {
        background: #e1e1e1;
        border: 2px solid black;
    }

    .search-bar {
      align-items: center;
      margin-right: 18px;
    }
    .search-button {
      hidden;
    }




    .column {
        float: left;
        width: 20%;
        padding: 10px;
        height: 150px; /* Should be removed. Only for demonstration */
    }
    .column2 {
      text-align: center;
        float: left;
        width: 20%;
        padding: 10px;
        height: 150px; /* Should be removed. Only for demonstration */
    }
    .column3 {
        text-align: justify;
        float: left;
        width: 60%;
        padding: 10px;
        height: 150px; /* Should be removed. Only for demonstration */
    }




    /* Side navigation links */
    .sidenav a {
        color: white;
        padding: 16px;
        text-decoration: none;
        display: block;
    }

    /* Change color on hover */
    .sidenav a:hover {
        background-color: #ddd;
        color: black;
    }

    /* Style the content */
    .content {
        margin-left: 200px;
        padding-left: 20px;
    }


    </style>
  </head>
  <body>



<div class="sidenav">

<% if !user_signed_in? %>
<%= link_to "Home", listings_path %>
<%= link_to "Sign Up", new_user_registration_path %>&nbsp &nbsp
<%= link_to "Log In", new_user_session_path %>&nbsp &nbsp
<% end %>

<% if user_signed_in? %>
<a href="<%= listings_path %>"><img src="https://thumbs.gfycat.com/PerfectVelvetyJavalina-size_restricted.gif" border="5" style="width:150px;height:75px;" alt="Home">      </a>
<br>
<%= link_to "Favourites", favourites_path %>&nbsp &nbsp
<%= link_to "Recommended", relevant_path %>&nbsp &nbsp
<%= link_to "Add a listing", new_listing_path %>&nbsp &nbsp
<%= link_to "Account Settings", edit_user_registration_path %>&nbsp &nbsp
<%= link_to "My Postcodes of Interest", postcodes_path %>&nbsp &nbsp
<%= link_to "Sign Out", destroy_user_session_path, method: "delete" %>&nbsp &nbsp
<%end%>
</div>
<div class="content">


<p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
     <div class="search-bar">

     <p><%= form_tag(listings_path, :method => "get", id: "search-form") do %></p>
         <%= text_field_tag :search, params[:search], placeholder: "Search" %>
         <p hidden ><%= submit_tag "Search", :name => nil %></p>
     <% end %>
 </div>
    <%= yield %>
     </div>
  </body>
</html>
